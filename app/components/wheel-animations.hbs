<section class='animation__container' data-test-wheel-animation-section>
  {{#if @users}}
    <div>
      {{#each @users as |m index|}}
        <a
          href='https://members.realdevsquad.com/{{m.username}}'
          target='_blank'
          class='member__link'
          rel='noopener noreferrer'
          data-test-wheel-animation-member-link
        >
          <img
            style={{(this.memberStyle index)}}
            class='circle member__img'
            src='{{(this.resizeImageUrl m.picture.publicId 150 150)}}'
            alt='{{m.first_name}} {{m.last_name}}'
            data-test-wheel-animation-member-image
          />
        </a>
      {{/each}}
    </div>
  {{else}}
    <div class='circle shine'></div>
  {{/if}}
</section>